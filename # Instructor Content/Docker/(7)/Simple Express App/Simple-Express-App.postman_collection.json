{
  "info": {
    "name": "Simple Express App",
    "description": "Collection for the Simple Express App (root, register user, list users)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "GET Root",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/",
        "description": "Returns Hello World"
      }
    },
    {
      "name": "POST Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"alice\"\n}"
        },
        "url": "{{baseUrl}}/users",
        "description": "Register a new user. Body: { \"userId\": \"<string>\" }. Returns 201 or 400 if missing/duplicate."
      }
    },
    {
      "name": "GET List Users",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/users",
        "description": "Returns JSON: { \"users\": [...] }"
      }
    }
  ]
}
